@model IEnumerable<WebAppPart1.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="Create"><i class="fa fa-add"></i> Add New Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VenueId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-primary">
                        <i class="fa fa-pencil"></i> Edit
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-secondary">
                        <i class="fa fa-eye"></i> Details
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
