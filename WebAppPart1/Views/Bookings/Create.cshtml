@model WebAppPart1.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Event ID -->
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <input asp-for="EventId" class="form-control" type="number" />
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <!-- Venue ID -->
            <div class="form-group">
                <label asp-for="VenueId" class="control-label"></label>
                <input asp-for="VenueId" class="form-control" type="number" />
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>

            <!-- Booking Date -->
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" type="date" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}