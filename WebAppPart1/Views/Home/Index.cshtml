                </a> |
                <!-- Details button for events -->
                <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-secondary">
                    <i class="fa fa-eye"></i> Details
                </a> |
                <!-- Delete button for events -->
                <a asp-controller="Events" asp-action="Delete" asp-route-id="@eventItem.EventId" class="btn btn-danger">
                    <i class="fa fa-trash"></i> Delete
                </a>
            </td>
        </tr>
    }
</table>